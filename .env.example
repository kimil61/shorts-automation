# ===========================================
# 🔐 API 키 설정 (실제 값으로 변경 필요)
# ===========================================

# OpenAI API (GPT 스크립트 생성용)
OPENAI_API_KEY=sk-your_openai_api_key_here

# YouTube Data & Upload API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# 쿠팡 파트너스 API
COUPANG_PARTNER_ACCESS_KEY=your_coupang_access_key_here
COUPANG_PARTNER_SECRET_KEY=your_coupang_secret_key_here
COUPANG_PARTNER_ID=your_partner_id_here

# TTS 서비스 (선택: OpenAI/TypeCast/ElevenLabs)
TYPECAST_API_KEY=your_typecast_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# 텔레그램 알림 봇
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# 네이버 API (트렌드 분석용)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# 구글 트렌드 (프록시 설정 - 선택사항)
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port

# ===========================================
# 🛠️ 시스템 설정
# ===========================================

# 디버그 모드
DEBUG_MODE=True
LOG_LEVEL=INFO

# 데이터베이스
DATABASE_URL=sqlite:///./data/automation.db

# 파일 경로
TEMP_DIR=./temp
OUTPUT_DIR=./output

# 성능 설정
MAX_WORKERS=4
MEMORY_LIMIT_MB=2048

# 업로드 설정
AUTO_UPLOAD=True
BACKUP_ENABLED=True

# 알림 설정
NOTIFICATION_ENABLED=True
ERROR_ALERT_ENABLED=True
SUCCESS_ALERT_ENABLED=False
